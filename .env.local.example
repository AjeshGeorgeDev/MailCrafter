# ============================================
# MailCrafter Local Development Environment
# ============================================
# Copy this file to .env and use it for local Docker Desktop development
# DO NOT commit .env to version control

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
POSTGRES_DB=emailbuilder
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123
POSTGRES_PORT=5433

# ============================================
# Redis Configuration
# ============================================
REDIS_PORT=6379
# REDIS_PASSWORD=  # Leave empty for local development

# ============================================
# Application Configuration
# ============================================
APP_PORT=3000
NODE_ENV=production

# ============================================
# Database Connection String
# Used by the application to connect to PostgreSQL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Note: Use 'postgres' as hostname (Docker service name)
# ============================================
DATABASE_URL=postgresql://admin:password123@postgres:5432/emailbuilder

# ============================================
# NextAuth Configuration
# ============================================
# Generate a new secret with: openssl rand -base64 32
NEXTAUTH_SECRET=WhPii4nQcQGW9BeGScE7N/Ns1VIHAW5xqBH9Lf/jt7g=
NEXTAUTH_URL=http://localhost:3000

# ============================================
# Redis Connection String
# Used by the application to connect to Redis
# Format: redis://:PASSWORD@HOST:PORT
# Note: Use 'redis' as hostname (Docker service name)
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# Encryption Key
# ============================================
# Generate a new key with: openssl rand -base64 32
# This key is used for encrypting sensitive data (32+ characters)
ENCRYPTION_KEY=GP1xm5WI9XOLYJpCtS5EV9RjUozQ07XsLfM/aD3YJj0=

# ============================================
# Optional: SMTP Configuration
# ============================================
# Uncomment and configure if you want to use environment variables
# for SMTP instead of configuring in the application
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ============================================
# Redis Password (Optional for Local Development)
# ============================================
# Leave empty for local development (no password)
# Set a password for production
REDIS_PASSWORD=
