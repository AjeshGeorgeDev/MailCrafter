# Database Configuration
POSTGRES_DB=emailbuilder
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_PORT=5433

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
APP_PORT=3000
NODE_ENV=production

# Database Connection (used by application)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://admin:password@postgres:5432/emailbuilder

# NextAuth Configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=change-this-secret-in-production-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# Redis Connection (used by application)
# Format: redis://:PASSWORD@HOST:PORT
REDIS_URL=redis://redis:6379

# Encryption Key (32 characters minimum)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=change-this-encryption-key-in-production-32-chars

# Optional: SMTP Configuration (if not using SMTP profiles in app)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
